#include <iostream>
using namespace std;

int main() {
  int a = 0;
  
  // Write variable
  a += 2;
  cout << "a += 2        -> a = " << a << endl;
  
  // Increment
  ++a;
  cout << "++a           -> a = " << a << endl;

  // Complex formula
  a = a * 5 + 2;
  cout << "a = a * 5 + 2 -> a = " << a << endl;
}
