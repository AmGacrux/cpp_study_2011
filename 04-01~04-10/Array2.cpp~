#include <iostream>
using namespace std;

int main() {
  int  a;
  //          
  // int *p;
  // int * p;
  // int
  // *
  // p;
  //       
  int* p = &a;
  // int* p, q;   q                 

  a = 0;
  cout << " a = " <<  a << endl
       << "*p = " << *p << endl; 

  *p = 5;
  cout << " a = " <<  a << endl
       << "*p = " << *p << endl;
}
